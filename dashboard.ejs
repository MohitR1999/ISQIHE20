<% include ../partials/conf_header %>

<div class="container-fluid">
  
  <div class="row mt-5 ml-3">
    <div class="col-5">
      <form class="forms" action="/conference/author/registration" method="POST" id="new-author-form" style="text-align: left;">
        <h2 class="form-heading" style="text-align:center;">Enter author information</h2>
        <div class="form-group">
          <label for="exampleInputEmail2">First Name<span class="required"> *</span></label>
          <input type="text" class="form-control" id="exampleInputEmail2" name="FirstName" placeholder="FirstName"
            required>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Last Name<span class="required"> *</span></label>
          <input type="text" class="form-control" id="exampleInputPassword1" name="LastName" placeholder="LastName"
            required>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Email<span class="required"> *</span></label>
          <input type="email" class="form-control" id="exampleInputPassword1" name="Email" placeholder="email" required>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Country<span class="required"> *</span></label>
          <input type="text" class="form-control" id="exampleInputPassword1" name="Country" placeholder="Country"
            required>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Organization<span class="required"> *</span></label>
          <input type="text" class="form-control" id="exampleInputPassword1" name="Organization"
            placeholder="Organizations" required>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Web Page<span class="required"> *</span></label>
          <input type="text" class="form-control" id="exampleInputPassword1" name="WebPage" placeholder="WebPage"
            required>
        </div>
        <button type="submit" class="btn btn-primary">Add Author</button>
        <a href="/conference/paper" class="btn btn-primary">Next</a>
      </form>
    </div>
    <div class="col-7">

      <% var i =1; %>

      <div class="table-responsive">
        <h3>Information of Authors</h3>
        <hr>
        <table class="table table-bordered table-hover" id="authors-added">
          <thead class="thead-dark">
            <tr>
              <th scope="col">First Name</th>
              <th scope="col">Last Name</th>
              <th scope="col">Email</th>
              <th scope="col">Organization</th>
              <th scope="col">Country</th>
              <th scope="col">Web Pages</th>
              <th scope="col"></th>
            </tr>
            <% authors.forEach(function(author){ %>
              <tr id="author-<%= author.id %>" style="word-wrap:break-word;">
                <td><%=author.firstName %></td>
                  <td><%=author.lastName %></td>
                  <td><%=author.email %></td>
                  <td><%=author.organization %></td>
                  <td><%=author.country %></td>
                  <td><%=author.webPage %></td>
                  <td>
                  <a href="/conference/author/<%= author.id %>?_method=DELETE" class="btn btn-sm btn-danger delete-author-button">Delete</a>
               </td>
              </tr>
              <% }); %>
          </thead>
          <tbody id="authors-added">
          
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="/ajax/author.js"></script>
<% include ../partials/conf_footer %>
