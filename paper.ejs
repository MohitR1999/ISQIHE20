<% include ../partials/conf_header %>

<div class="container container-small" style="font-family: Verdana, Arial, Helvetica, sans-serif;">
    <a href="/conference/author/dashboard" class="btn btn-primary">Previous</a>
    <a href="/conference/report" class="btn btn-primary">Next</a><br><br>
  <form class="forms" action="/conference/paper/abstract" method="POST">
    <h2 class="form-heading">Paper Information</h2>
    <div class="form-group">
      <label for="name">Title<span class="required"> *</span></label>
      <input type="text" class="form-control" id="name" name="Title" value="<%= paper.title %>" required>
    </div>
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Abstract<span class="required"> *</span></label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"  name="Abstract" required><%= paper.abstract %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<div class="container container-small">
  <form class="forms" action="/conference/paper/keywords" method="POST">
   
    <div class="form-group">
      <label for="exampleFormControlTextarea1">Keywords<span class="required"> *</span></label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="Keywords"><%= paper.keywords %></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<div class="container container-small">
  <form class="forms" action="/conference/paper/file" enctype="multipart/form-data" method="POST">
   
    <div class="form-group">
      <label for="name">File<span class="required"> *</span></label>
      <input type="file" class="form-control" id="name" name="myFile" required>
    </div><br>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<% include ../partials/conf_footer %>