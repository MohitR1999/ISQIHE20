<% include ../partials/conf_header %>

<% var i = 1; %>
<div class="container container-big" style="font-family: Verdana, Arial, Helvetica, sans-serif;">
  <div class="heading">
    <h5>Details of Paper Submitted</h5>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-2 col-sm-4 col-4">
      <a href="/conference/author/dashboard" class="btn btn-primary">Back to Dashboard</a>
    </div>
  </div>
  <br>
  <div class="table table-striped" >
    <table class="table table-bordered table-hover">
      <thead class="thead-dark">
        <tr>
          <td colspan="2" class="table-dark" style="text-align: center;"> Paper : <%= data.paper.id %></td>
        </tr>
      </thead>
      <tbody id="paper">

        <tr>
          <td class="bg-warning"> Title </td>
          <td> <%= data.paper.title %> </td>
        </tr>
        <tr>
          <td class="bg-warning">Keywords</td>
          <td><%= data.paper.keywords %></td>
        </tr>

        <tr>
          <td class="bg-warning">Abstract</td>
          <td><%= data.paper.abstract %></td>
        </tr>

        <tr>
          <td class="bg-warning">Submitted</td>
          <td><%= data.paper.date_submitted %></td>
        </tr>

        <tr>
          <td class="bg-warning">Last Updated</td>
          <td><%= data.paper.last_updated %></td>
        </tr>


      </tbody>
    </table>

    <table class="table table-bordered table-hover">
      <table class="table table-bordered table-hover">
        <thead class="thead-dark">
          <tr>
            <td colspan="6" class="bg-primary" style="text-align: center;color:white;font-size: 1.1rem;">Author</td>
          </tr>
          <tr>
            <th scope="col">S.No.</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Country</th>
            <th scope="col">Organization</th>
            <th scope="col">Web Page</th>
          </tr>
        </thead>
        <tbody id="author">
          <% data.authors.forEach(function(author){ %>
          <tr>
            <td> <%= i++ %>. </td>
            <td> <%= author.firstName %> <%= author.lastName %> </td>
            <td> <%= author.email %> </td>
            <td> <%= author.country %> </td>
            <td> <%= author.organization %> </td>
            <td> <%= author.webPage %> </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
  </div>
</div>

<% include ../partials/conf_footer %>